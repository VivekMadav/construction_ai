#!/bin/bash

# Construction AI Platform Quick Access Script
# Usage: ./construction-ai [start|stop|status]

case "$1" in
    "start")
        echo "üöÄ Starting Construction AI Platform..."
        ./start-platform.sh
        ;;
    "stop")
        echo "üõë Stopping Construction AI Platform..."
        ./stop-platform.sh
        ;;
    "status")
        echo "üìä Construction AI Platform Status:"
        echo ""
        if curl -s http://localhost:8000/health > /dev/null 2>&1; then
            echo "‚úÖ Backend: Running (http://localhost:8000)"
        else
            echo "‚ùå Backend: Not running"
        fi
        
        if curl -s http://localhost:3000 > /dev/null 2>&1; then
            echo "‚úÖ Frontend: Running (http://localhost:3000)"
        else
            echo "‚ùå Frontend: Not running"
        fi
        ;;
    *)
        echo "Construction AI Platform - Quick Access"
        echo ""
        echo "Usage: ./construction-ai [command]"
        echo ""
        echo "Commands:"
        echo "  start   - Start the platform (backend + frontend)"
        echo "  stop    - Stop all services"
        echo "  status  - Check if services are running"
        echo ""
        echo "Examples:"
        echo "  ./construction-ai start"
echo "  ./construction-ai stop"
echo "  ./construction-ai status"
        ;;
esac 